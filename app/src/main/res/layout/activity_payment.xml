<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Your Purchase"
        android:textSize="16sp" />


    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:drawable/divider_horizontal_bright" />

        <TableRow>

            <TextView android:text="Album 1 - Post Malone Live 2018" />

            <TextView
                android:gravity="right"
                android:paddingLeft="16dp"
                android:text="$ 6.00" />
        </TableRow>

        <TableRow>

            <TextView android:text="Taxes" />

            <TextView
                android:gravity="right"
                android:paddingLeft="16dp"
                android:text="$ 0.60" />
        </TableRow>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:drawable/divider_horizontal_bright" />

        <TableRow>

            <TextView
                android:text="TOTAL"
                android:textStyle="bold" />

            <TextView
                android:gravity="right"
                android:paddingLeft="16dp"
                android:text="$ 0.60"
                android:textStyle="bold" />
        </TableRow>


    </TableLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="right"
        android:minWidth="64dp"
        android:text="Complete Purchase"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="This screen is used to complete the purchases through a payment gateway. When clicked, the button Complete Purchase, the user is confirming the purchase, so an Intent for other Activity is called, completing the payment with the In-App Billing API."
        android:textColor="@android:color/holo_red_dark"
        android:textSize="14dp" />

</LinearLayout>